.wrapper_with_padding
  %p#notice= notice
  %h1 Listing Profiles
  %table
    %thead
      %tr
        %th Pic
        %th User
        %th Bio
        %th Zip
        %th Gender
        %th{:colspan => "4"}
    %tbody
      - @profiles.each do |profile|
        %tr
          %td= link_to (image_tag profile.avatar.url(:thumb), class: 'image'), profile
          %td= profile.user_id
          %td= profile.bio
          %td= profile.zip
          %td= profile.gender.gender
          %td= link_to 'Show', profile
          %td= link_to 'Edit', edit_profile_path(profile)
          %td= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Profile', new_profile_path

