%li.control-group.nested-fields
	.controls
		= f.simple_fields_for :location do |profile_location_location|
			=profile_location_location.input_field :address_1, :placeholder => "Address / Business Same"
			=profile_location_location.input_field :address_2, :placeholder => "Address Line 2"
			=profile_location_location.input_field :city, :placeholder => "City"
			=profile_location_location.input_field :state, :placeholder => "State"
			=profile_location_location.input_field :zip, :placeholder => "Zip"
		= f.association :location_type, label_method: :type_name, value_method: :id, include_blank: false
		= f.input :guests, :label => "Can you bring guests here?"
		= link_to_remove_association "Remove Location", f, class: "btn btn-danger"
%br/