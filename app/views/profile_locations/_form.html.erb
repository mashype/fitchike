<%= simple_form_for(@profile_location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location_id %>
    <%= f.input :profile_id %>
    <%= f.input :location_type_id %>
    <%= f.input :guests,     as: :select %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
