= simple_form_for @appointment do |f|
	.col-md-8
		=f.input :title, input_html: { maxlength: 20 }
		=f.input :comments
	.col-md-4
		=f.input :date, as: :date
		=f.input :length
		=f.input :price
		=f.association :profile, :as => :collection_select, collection: Profile.where( user_id: current_user ), label_method: :username, value_method: :id, :input_html => {:class => "input-small"}, :label => "Select Your Profile"
		=f.input :active
	=f.button :submit, class: "button"
