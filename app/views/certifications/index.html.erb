<p id="notice"><%= notice %></p>

<h1>Listing Certifications</h1>

<table>
  <thead>
    <tr>
      <th>Cert_Name</th>
      <th>Abbreviation</th>
      <th>Description</th>
      <th>Website</th>      
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.cert_name %></td>
        <td><%= certification.cert_abbreviation %></td>
        <td><%= certification.cert_description %></td> 
        <td><%= certification.website %></td>
        <td><%= link_to 'Show', certification %></td>
        <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
        <td><%= link_to 'Destroy', certification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

